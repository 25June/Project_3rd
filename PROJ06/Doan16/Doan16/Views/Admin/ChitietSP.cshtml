@model Doan16.Models.NuocGK

@{
    ViewBag.Title = "ChitietSP";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="margin-left:0.3em">THÔNG TIN CHI TIẾT SẢN PHẨM</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt style="margin-left:0.5em; font-weight:bold">
            TÊN LOẠI NƯỚC GIẢI KHÁT
        </dt>

        <dd style="margin-left:0.5em">
            @Html.DisplayFor(model => model.LoaiNGK.TenLoaiNGK)
        </dd>

        <dt style="margin-left:0.5em; font-weight:bold">
            TÊN NƯỚC GIẢI KHÁT
        </dt>

        <dd style="margin-left:0.5em">
            @Html.DisplayFor(model => model.tenNGK)
        </dd>

        <dt style="margin-left:0.5em; font-weight:bold">
            ĐƠN GIÁ
        </dt>

        <dd style="margin-left:0.5em">
            @String.Format("{0:0,0}", Model.dongia) VNĐ
        </dd>

        <dt style="margin-left:0.5em; font-weight:bold">
            SỐ LƯỢNG TỒN
        </dt>

        <dd style="margin-left:0.5em">
            @Html.DisplayFor(model => model.soluongton)
        </dd>

        <dt style="margin-left:0.5em; font-weight:bold">
            HÌNH ẢNH
        </dt>

        <dd style="margin-left:0.5em">
            <img src="@Url.Content("~/images/"+ Model.hinhanh)" width="150px" />
        </dd>

    </dl>
</div>
<p style="margin-left:0.5em">
    @Html.ActionLink("SỬA", "SuaSP", new { id = Model.id_NuocGK }) |
    @Html.ActionLink("VỀ TRANG QUẢN LÝ SẢN PHẨM", "SanPham")
</p>
