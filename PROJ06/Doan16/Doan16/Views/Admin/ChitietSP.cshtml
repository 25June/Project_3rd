@model Doan16.Models.NuocGK

@{
    ViewBag.Title = "ChitietSP";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>THÔNG TIN CHI TIẾT SẢN PHẨM</h2>

<div>
    <h4>NuocGK</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            TÊN LOẠI NƯỚC GIẢI KHÁT
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LoaiNGK.TenLoaiNGK)
        </dd>

        <dt>
            TÊN NƯỚC GIẢI KHÁT
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tenNGK)
        </dd>

        <dt>
