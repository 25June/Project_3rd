        <dd>
            @Html.DisplayFor(model => model.soluongton)
        </dd>

        <dt>
            HÌNH ẢNH
        </dt>

        <dd>
            <img src="@Url.Content("~/images/"+ Model.hinhanh)" width="150px" />
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("SỬA", "SuaSP", new { id = Model.id_NuocGK }) |
