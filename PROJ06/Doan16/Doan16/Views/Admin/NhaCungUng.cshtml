@model IEnumerable<Doan16.Models.NhaCungUng>
@{
    ViewBag.Title = "NhaCungUng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>QUẢN LÝ NHÀ CUNG ỨNG</h2>
<div class="container-fluid">
    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="#">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Tables</li>
    </ol>
    <!-- Example DataTables Card-->
    <div class="card mb-3">
        <div class="card-header">
            <i class="fa fa-table"></i> Data Table Example
        </div>
        <div class="card-body">
            <div class="row">
                <div style="margin-left:2em; margin-bottom:1em; font-weight:bold">
                    @using (Html.BeginForm("ThemmoiNCU", "Admin", FormMethod.Get))
                    {
                        <button type="submit" class="btn btn-primary" name="themmoi">THÊM MỚI</button>
                    }
                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr style="text-align:center">
                            <th style="width:7%;">Mã NCU</th>
                            <th style="width:30%">Tên NCU</th>
                            <th style="width:30%">Địa chỉ</th>
                            <th>Số điện thoại</th>
                            <th>Chức năng</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th style="width:7%;">Mã NCU</th>
                            <th style="width:30%">Tên NCU</th>
                            <th>Địa chỉ</th>
                            <th>Số điện thoại</th>
                            <th>Chức năng</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.id_NhaCungUng</td>
                                <td>@item.TenNhaCungUng</td>
                                <td>@item.DiaChi</td>
                                <td>@item.SDT</td>
                                <td>
                                    @using (Html.BeginForm())
                                    {
                                        <button class="btn" style="width:120px; margin:0.3em; margin-left:3em;"> @Html.ActionLink("Xem chi tiết", "ChitietNCU", new { id = item.id_NhaCungUng })</button><br />
                                        <button class="btn" style="width:120px; margin:0.3em; margin-left:3em;">@Html.ActionLink("Sửa", "SuaNCU", new { id = item.id_NhaCungUng })</button><br />
                                        <button class="btn" style="width:120px; margin:0.3em; margin-left:3em;">@Html.ActionLink("Xóa", "XoaNCU", new { id = item.id_NhaCungUng })</button><br />
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
    </div>
</div>



