@model IEnumerable<Doan16.Models.NuocGK>
@{
    ViewBag.Title = "SanPham";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>QUẢN LÝ SẢN PHẨM</h2>
<div class="container-fluid">
    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="#">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Tables</li>
    </ol>
    <!-- Example DataTables Card-->
    <div class="card mb-3">
        <div class="card-header">
            <i class="fa fa-table"></i> Data Table Example
        </div>
        <div class="card-body">
            <div class="row">
                <div style="margin-left:2em; margin-bottom:1em; font-weight:bold">
                    @using (Html.BeginForm("ThemmoiSP", "Admin", FormMethod.Get))
                    {
                        <button type="submit" class="btn btn-primary" name="themmoi">THÊM MỚI</button>
                    }
                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr style="text-align:center">
                            <th style="width:7%;">Mã NGK</th>
                            <th style="width:15%">Tên NGK</th>
                            <th>Loại NGK</th>
                            <th>Đơn giá</th>
                            <th style="width: 20%">Hình ảnh</th>
                            <th style="width: 10%">Số lượng tồn</th>
                            <th style="width:15%">Chức năng</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Mã NGK</th>
                            <th style="width:20%">Tên NGK</th>
                            <th>Loại NGK</th>
                            <th>Đơn giá</th>
                            <th>Hình ảnh</th>
                            <th>Số lượng tồn</th>
                            <th>Chức năng</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.id_NuocGK</td>
                                <td>@item.tenNGK</td>
                                <td>@Html.DisplayFor(modelItem => item.LoaiNGK.TenLoaiNGK)
                                <td>@item.dongia</td>
                                <td style="display:flex; align-items:center; justify-content:center"><img src="../../images/@item.hinhanh" style="width:200px" /></td>
                                <td style="text-align:center">@item.soluongton</td>
                                <td>
                                    @using (Html.BeginForm())
                                    {
                                        <button class="btn" style="width:120px; margin:0.3em; margin-left:3em;"> @Html.ActionLink("Xem chi tiết", "ChitietSP", new { id = item.id_NuocGK })</button><br />
                                        <button class="btn" style="width:120px; margin:0.3em; margin-left:3em;">@Html.ActionLink("Sửa", "SuaSP", new { id = item.id_NuocGK })</button>
                                        <button class="btn" style="width:120px; margin:0.3em; margin-left:3em;">@Html.ActionLink("Xóa", "XoaSP", new { id = item.id_NuocGK })</button><br />
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
    </div>
</div>


