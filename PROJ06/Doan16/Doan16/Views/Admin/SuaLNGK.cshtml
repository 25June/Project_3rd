@model Doan16.Models.LoaiNGK

@{
    ViewBag.Title = "SuaLNGK";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="margin-left:0.3em">SỬA THÔNG TIN LOẠI NƯỚC GIẢI KHÁT</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4 style="margin-left:0.5em">Thông Tin Loại Nước Giải Khát</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id_LoaiNGK)

        <div class="form-group">
            <div style="margin-left:1em; font-weight:bold">TÊN LOẠI NƯỚC GIẢI KHÁT</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenLoaiNGK, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenLoaiNGK, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div style="margin-left:1em; font-weight:bold">NHÀ CUNG ỨNG</div>
            <div class="col-md-10">
                @Html.DropDownList("NhaCungUng")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div style="margin-left:1em">
    @Html.ActionLink("VỀ TRANG QUẢN LÝ LOẠI NGK", "LoaiNGK")
</div>
