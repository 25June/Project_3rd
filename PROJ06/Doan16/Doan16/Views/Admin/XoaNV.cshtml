@model Doan16.Models.TaiKhoan

@{
    ViewBag.Title = "XoaNV";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>XÓA TÀI KHOẢN NHÂN VIÊN</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Thông Tin Tài Khoản</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên đăng nhập
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenDangNhap)
        </dd>

        <dt>
            Địa chỉ
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DiaChi)
        </dd>

        <dt>
            Số điện thoại
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SDT)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("TRỞ VỀ TRANG QUẢN LÝ NHÂN VIÊN", "NhanVien")
        </div>
    }
</div>

