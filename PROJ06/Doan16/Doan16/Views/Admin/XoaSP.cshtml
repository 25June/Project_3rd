@model Doan16.Models.NuocGK

@{
    ViewBag.Title = "XoaSP";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>THÔNG TIN SẢN PHẨM</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>NuocGK</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            LOẠI NƯỚC GIẢI KHÁT
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LoaiNGK.TenLoaiNGK)
        </dd>

        <dt>
            TÊN NƯỚC GIẢI KHÁT
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tenNGK)
        </dd>

        <dt>
            ĐƠN GIÁ
        </dt>

        <dd>
            @String.Format("{0:0,0}", Model.dongia) VNĐ
        </dd>

        <dt>
            SỐ LƯỢNG TỒN
        </dt>

        <dd>
            @Html.DisplayFor(model => model.soluongton)
        </dd>

        <dt>
            HÌNH ẢNH
        </dt>

        <dd>
            <img src="@Url.Content("~/images/"+ Model.hinhanh)" width="150px" />
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("TRỞ VỀ TRANG QUẢN LÝ SẢN PHẨM", "SanPham")
        </div>
    }
</div>
