
@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div style="margin: 5em 10em;">
    <table align="center">
        <h2 style="text-align:center">ĐĂNG KÝ THÀNH VIÊN</h2>
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)
            <tr style="height:40px">
                <td> Họ tên khách hàng:</td>
                <td>
                    @Html.TextBox("Hoten", null, new { @class = "form-control", @style = "margin-left:1em" })
                    @ViewData["Loi1"]
                </td>
            </tr>
            <tr style="height:40px">
                <td> Tên đăng nhập:</td>
                <td>
                    @Html.TextBox("TenDN", null, new { @class = "form-control", @style = "margin-left:1em" })
                    @ViewData["Loi2"]
                </td>
            </tr>
            <tr style="height:40px">
                <td> Mật khẩu:</td>
                <td>
                    @Html.Password("Matkhau", null, new { @class = "form-control", @style = "margin-left:1em" })
                    @ViewData["Loi3"]
                </td>
            </tr>
            <tr style="height:40px">
                <td> Mật khẩu nhập lại:</td>
                <td>
                    @Html.Password("Matkhaunhaplai", null, new { @class = "form-control", @style = "margin-left:1em" })
                    @ViewData["Loi4"]
                </td>
            </tr>
            <tr style="height:40px">
                <td> Địa chỉ:</td>
                <td>
                    @Html.TextBox("Diachi", null, new { @class = "form-control", @style = "margin-left:1em" })
                    @ViewData["Loi5"]
                </td>
            </tr>
            <tr style="height:40px">
                <td> Email:</td>
                <td>
                    @Html.TextBox("Email", null, new { @class = "form-control", @style = "margin-left:1em" })
                    @ViewData["Loi6"]
                </td>
            </tr>
            <tr style="height:40px">
                <td> Điện thoại:</td>
                <td>
                    @Html.TextBox("Dienthoai", null, new { @class = "form-control", @style = "margin-left:1em" })
                    @ViewData["Loi7"]
                </td>
            </tr>
            <tr style="height:40px">
                <td> Giới tính:</td>
                <td>
                    Nam @Html.RadioButton("Gioitinh", true, true) Nữ @Html.RadioButton("Gioitinh", false)
                    @ViewData["Loi8"]
                </td>
            </tr>
            <tr style="height:40px">
                <td> Ngày sinh:</td>
                <td>
                    <input type="date" name="Ngaysinh" />
                </td>
            </tr>
            <tr style="height:40px">
                <td></td>
                <td>
                    <input type="submit" value="Đăng ký" class="btn btn-primary"/>
                </td>
            </tr>
        }
    </table>

</div>