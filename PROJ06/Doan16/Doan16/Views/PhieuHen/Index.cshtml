@model IEnumerable<Doan16.Models.PhieuHen>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card mb-3">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="#">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Tables</li>
    </ol>
    <div class="card-header">
        <i class="fa fa-table"></i> DANH SÁCH PHIẾU HẸN
    </div>
    <div class="card-body">
        <div class="row">
            <div style="margin-left:2em; margin-bottom:1em; font-weight:bold">
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr style="text-align:center">
                        <th style="width:15%;">ID</th>
                        <th style="width:20%;">Khách hàng</th>
                        <th style="width:20%">Ngày lập phiếu</th>
                        <th style="width:10%">Ngày hẹn</th>
                        <th style="width:20%">Chức năng</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr style="text-align:center">
                        <th style="width:15%;">ID</th>
                        <th style="width:20%;">Khách hàng</th>
                        <th style="width:20%">Ngày lập phiếu</th>
                        <th style="width:20%">Ngày hẹn</th>
                        <th style="width:20%">Chức năng</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr style="text-align:center">
                            <td>@item.id_PhieuHen</td>
                            <td>@item.KhachHang.tenKhachHang</td>
                            <td>@item.ngaylapphieu.ToString("dd / MM / yyyy")</td>
                            <td>@item.ngayhen.ToString("dd / MM / yyyy")</td>
                            <td>
                                @using (Html.BeginForm())
                                {
                                    <button class="btn" style="width:120px; margin:0.3em; margin-left:3em;"> @Html.ActionLink("Xem chi tiết", "ChiTietPH", new { id = item.id_PhieuHen })</button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


